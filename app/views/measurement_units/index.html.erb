<div class="page-header">
  <h1>
    Measurement units
    <a href="/measurement_units/new" class="btn btn-lg btn-success">New Measurement unit</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Measurement</th>
        <th>Actions</th>
      </tr>

      <% @measurement_units.each do |measurement_unit| %>
      <tr>
        <td><%= measurement_unit.name %></td>
        <td><%= measurement_unit.measurement.name %></td>
        <td>
          <a href="/measurement_units/<%= measurement_unit.id %>" class="btn btn-primary">Show</a>
          <a href="/measurement_units/<%= measurement_unit.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_measurement_unit/<%= measurement_unit.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
