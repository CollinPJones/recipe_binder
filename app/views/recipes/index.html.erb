<div class="page-header">
  <h1>
    Recipes
    <a href="/recipes/new" class="btn btn-lg btn-success">New Recipe</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Cook temp</th>
        <th>Cook time hrs</th>
        <th>Cook time minutes</th>
        <th>Servings</th>
        <th>Directions</th>
        <th>User</th>
        <th>Course</th>
        <th>Actions</th>
      </tr>

      <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.cook_temp %></td>
        <td><%= recipe.cook_time_hrs %></td>
        <td><%= recipe.cook_time_minutes %></td>
        <td><%= recipe.servings %></td>
        <td><%= recipe.directions %></td>
        <td><%= recipe.user_id %></td>
        <td><%= recipe.course_id %></td>
        <td>
          <a href="/recipes/<%= recipe.id %>" class="btn btn-primary">Show</a>
          <a href="/recipes/<%= recipe.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_recipe/<%= recipe.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
