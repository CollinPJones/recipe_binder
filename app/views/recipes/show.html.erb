<div class="page-header">
  <h3>Recipe #<%= @recipe.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @recipe.name %></dd>

      <dt>Cook temp</dt>
      <dd><%= @recipe.cook_temp %></dd>

      <dt>Cook time hrs</dt>
      <dd><%= @recipe.cook_time_hrs %></dd>

      <dt>Cook time minutes</dt>
      <dd><%= @recipe.cook_time_minutes %></dd>

      <dt>Servings</dt>
      <dd><%= @recipe.servings %></dd>

      <dt>Description</dt>
      <dd><%= @recipe.description %></dd>

      <dt>User</dt>
      <dd><%= @recipe.user_id %></dd>

      <dt>Course</dt>
      <dd><%= @recipe.course_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/recipes" class="btn btn-primary">
        Back
      </a>
      <a href="/recipes/<%= @recipe.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_recipe/<%= @recipe.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <img src="<%= @recipe.image %>" alt="" class="img-responsive">
  </div>
</div>
