<!-- Validation failure messages -->
<% if @course.errors.any? %>
  <% @course.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Course</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_course" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @course.name %>">
      </div>

      <div class="form-group">
        <label for="Image" class="control-label">
          Image
        </label>

        <input type="file" id="image" name="image" class="form-control" placeholder="Image" value="<%= @course.image %>">
      </div>
      <button class="btn btn-success">
        Create Course
      </button>
      or
      <a href="/courses">Cancel</a>
    </form>
  </div>
</div>
