<div class="page-header">
  <h1>
    Measurements
    <a href="/measurements/new" class="btn btn-lg btn-success">New Measurement</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @measurements.each do |measurement| %>
      <tr>
        <td><%= measurement.name %></td>
        <td>
          <a href="/measurements/<%= measurement.id %>" class="btn btn-primary">Show</a>
          <a href="/measurements/<%= measurement.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_measurement/<%= measurement.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
