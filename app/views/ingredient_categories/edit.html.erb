<!-- Validation failure messages -->
<% if @ingredient_category.errors.any? %>
  <% @ingredient_category.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Ingredient Category #<%= @ingredient_category.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_ingredient_category/<%= @ingredient_category.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @ingredient_category.name %>">
      </div>

      <button class="btn btn-warning">
        Update Ingredient Category
      </button>
      or
      <a href="/ingredient_categories/<%= @ingredient_category.id %>">Cancel</a>
    </form>
  </div>
</div>
