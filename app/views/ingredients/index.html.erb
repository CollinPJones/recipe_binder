<div class="page-header">
  <h1>
    Ingredients
    <a href="/ingredients/new" class="btn btn-lg btn-success">New Ingredient</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Purchase container</th>
        <th>Purchase quanitity</th>
        <th>Category</th>
        <th>Purchase measurement unit</th>
        <th>Actions</th>
      </tr>

      <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.purchase_container %></td>
        <td><%= ingredient.purchase_quanitity %></td>
        <td><%= ingredient.category_id %></td>
        <td><%= ingredient.purchase_measurement_unit_id %></td>
        <td>
          <a href="/ingredients/<%= ingredient.id %>" class="btn btn-primary">Show</a>
          <a href="/ingredients/<%= ingredient.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_ingredient/<%= ingredient.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
