<div class="page-header">
  <h1>
    Ingredients
    <a href="/ingredients/new" class="btn btn-lg btn-success">New Ingredient</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Purchase container</th>
        <th>Purchase quantity</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>

      <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.purchase_container %></td>
        <td>
          <% if ingredient.measurement.name == "Quantity" %>
          <%= ingredient.purchase_quantity.ceil %>
          <% elsif ingredient.purchase_quantity == ingredient.purchase_quantity.to_i.to_f %>
          <%= ingredient.purchase_quantity.to_i %>
          <%= " " + (ingredient.purchase_unit.name).pluralize(ingredient.purchase_quantity.ceil)%>
          <% else %>
          <%= ingredient.purchase_quantity %>
          <%= " " + (ingredient.purchase_unit.name).pluralize(ingredient.purchase_quantity.ceil)%>
          <% end %>
        </td>
        <td><%= ingredient.category.name %></td>
        <td>
          <a href="/ingredients/<%= ingredient.id %>" class="btn btn-primary">Show</a>
          <a href="/ingredients/<%= ingredient.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_ingredient/<%= ingredient.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
