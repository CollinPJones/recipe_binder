<!-- Validation failure messages -->
<% if @recipe_ingredient.errors.any? %>
  <% @recipe_ingredient.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Recipe Ingredient #<%= @recipe_ingredient.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_recipe_ingredient/<%= @recipe_ingredient.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for recipe_id -->
      <div class="form-group">
        <label for="recipe_id" class="control-label">
          Recipe
        </label>

        <%= select_tag(:recipe_id , options_from_collection_for_select(Recipe.all, :id, :name, @recipe_ingredient.recipe_id), :class => "form-control", include_blank: "Recipe") %>
      </div>

      <!-- Label and input for ingredient_id -->
      <div class="form-group">
        <label for="ingredient_id" class="control-label">
          Ingredient
        </label>

        <input type="text" id="ingredient_id" name="ingredient_id" placeholder="Ingredient" class="form-control" value="<%= @recipe_ingredient.ingredient_id %>">
      </div>

      <!-- Label and input for note -->
      <div class="form-group">
        <label for="note" class="control-label">
          Note
        </label>

        <input type="text" id="note" name="note" placeholder="Note" class="form-control" value="<%= @recipe_ingredient.note %>">
      </div>

      <!-- Label and input for measurement_unit_id -->
      <div class="form-group">
        <label for="measurement_unit_id" class="control-label">
          Measurement unit
        </label>

        <input type="text" id="measurement_unit_id" name="measurement_unit_id" placeholder="Measurement unit" class="form-control" value="<%= @recipe_ingredient.measurement_unit_id %>">
      </div>

      <!-- Label and input for quantity -->
      <div class="form-group">
        <label for="quantity" class="control-label">
          Quantity
        </label>

        <input type="text" id="quantity" name="quantity" placeholder="Quantity" class="form-control" value="<%= @recipe_ingredient.quantity %>">
      </div>

      <button class="btn btn-warning">
        Update Recipe Ingredient
      </button>
      or
      <a href="/recipe_ingredients/<%= @recipe_ingredient.id %>">Cancel</a>
    </form>
  </div>
</div>
